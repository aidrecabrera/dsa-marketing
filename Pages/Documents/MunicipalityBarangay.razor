@page "/municipality-barangay"

<!-- MunicipalityBarangayForm.razor -->

<div class="form-group">
    <label for="municipality">Select Municipality:</label>
    <select id="municipality" @bind="selectedMunicipality" class="form-control">
        @foreach (var municipality in municipalities)
        {
            <option value="@municipality">@municipality</option>
        }
    </select>
</div>

<div class="form-group">
    <label for="barangay">Select Barangay:</label>
    <select id="barangay" @bind="selectedBarangay" class="form-control">
        @foreach (var barangay in GetBarangays(selectedMunicipality))
        {
            <option value="@barangay">@barangay</option>
        }
    </select>
</div>

